<?xml version="1.0" encoding="utf-8"?>
<!-- Prod Heinz HTTPS -->
<network-security-config>
    <domain-config cleartextTrafficPermitted="false">
        <!-- si cliente usa HTTPS, va aqui -->
        <domain includeSubdomains="true">denario.net</domain>

        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- si cliente _NO_ usa HTTPS, va aqui -->
        <!-- tambien va aqui cualquier servidor de prueba -->
        <domain includeSubdomains="true">denariopremium.com</domain>
    </domain-config>
</network-security-config>